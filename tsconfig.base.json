{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  }
}
