{
  "name": "seisei-vsc",
  "version": "1.0.0",
  "displayName": "seisei",
  "author": "ChannelCorp",
  "publisher": "ChannelCorp",
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "description": "code generator based on custom templates",
  "keywords": [
    "channel",
    "extension",
    "seisei",
    "code",
    "generator",
    "template"
  ],
  "icon": "assets/seisei-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/channel-io/seisei",
    "directory": "packages/vsc"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "seisei.generate",
          "group": "seisei"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "seisei.init",
          "group": "seisei"
        }
      ]
    },
    "commands": [
      {
        "command": "seisei.generate",
        "title": "seisei code"
      },
      {
        "command": "seisei.init",
        "title": "seisei init"
      }
    ]
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "format": "biome format --write ./src/**/*",
    "lint": "biome lint --write ./src/**/*",
    "check": "biome check --write ./src/**/*",
    "compile": "yarn build",
    "vscode:prepublish": "yarn build",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^3.1.0"
  },
  "dependencies": {
    "@channel.io/seisei-core": "workspace:*"
  },
  "vsce": {
    "dependencies": false,
    "useYarn": true
  }
}
