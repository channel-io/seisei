{
  "name": "seisei-vsc",
  "description": "seisei for vscode extension",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/channel-io/seisei",
    "directory": "packages/vsc"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "main": "./dist/index.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "seisei.generate",
          "group": "Boilerplate"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "seisei.init",
          "group": "Boilerplate"
        }
      ]
    },
    "commands": [
      {
        "command": "seisei.generate",
        "title": "seisei code"
      },
      {
        "command": "seisei.init",
        "title": "seisei init"
      }
    ]
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "format": "biome format --write ./src/**/*",
    "lint": "biome lint --write ./src/**/*",
    "check": "biome check --write ./src/**/*"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0"
  },
  "dependencies": {
    "seisei-core": "workspace:*"
  }
}
