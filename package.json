{
  "name": "seisei-monorepo",
  "version": "1.0.0",
  "description": "code generator based on custom templates",
  "type": "module",
  "scripts": {
    "format:cli": "yarn workspace seisei-cli run format",
    "format:core": "yarn workspace seisei-core run format",
    "format:vsc": "yarn workspace seisei-vsc run format",
    "format": "yarn format:cli && yarn format:core && yarn format:vsc",
    "lint:cli": "yarn workspace seisei-cli run lint",
    "lint:core": "yarn workspace seisei-core run lint",
    "lint:vsc": "yarn workspace seisei-vsc run lint",
    "lint": "yarn lint:cli && yarn lint:core && yarn lint:vsc",
    "check:cli": "yarn workspace seisei-cli run check",
    "check:core": "yarn workspace seisei-core run check",
    "check:vsc": "yarn workspace seisei-vsc run check",
    "check": "yarn check:cli && yarn check:core && yarn check:vsc",
    "build:core": "yarn workspace seisei-core run build",
    "build:cli": "yarn workspace seisei-cli run build",
    "build:vsc": "yarn workspace seisei-vsc run build",
    "build": "yarn build:core && yarn build:cli && yarn build:vsc",
    "publish:cli": "yarn workspace seisei-cli run publish",
    "publish:core": "yarn workspace seisei-core run publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^22.6.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.0"
}
